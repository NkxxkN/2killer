      @if(!startedAt && killers && killers.length > 0)
       
        <p>Les killers prêts à en découdre:</p>
        <ul>
          @each(killer in killers)
          @if(killer == username)
            <li class="own-killer">{{killer}}</li>
          @else
            <li>{{killer}}</li>
          @endif
          @endeach
        </ul>
        <p class="">Rafraichis la page pour voir de nouvelles personnes.</p>
      @endif

      @if(kill)
        <div>Ton kill: {{kill.description}}</div>
        <div>Ta victime: {{victim.username}}</div>
        @if(!isSuggestKill)
          <p><a class="subtitle subsubtitle" href="?suggestKill=1">T'as une nouvelle idée de Kill? Partage la pour qu'on puisse la suggérer aux futurs participants en panne d'inspi</a></p>
        @endif
      @endif

      @if(isSuggestKill)
        <form autocomplete="off" class="form" action="{{ route('kill.suggest') }}" method="POST">
          </label>
          <label>
            <input name="description" value="" placeholder="Balance le kill auquel t'aurais voulu penser avant de commencer cette game." required />
            <span >
              <span >Suggère un kill</span>
            </span>
          </label>  
          {{ csrfField() }}
          <input hidden name="game_id" value="{{ game.id }}"/>
          <label >
              <input type="submit" value="Envoyer"/>
          </label>  
        </form>
      @endif



      @if(!game)
        <form autocomplete="off" action="{{ route('game.new') }}" method="POST">
          {{ csrfField() }}
          <label class="subtitle field a-field a-field_a2 page__field">
              <input type="submit" value="Commencer"/>
          </label>  
        </form>
      @endif

      @if(isGameOwner && !startedAt)
        <br/>
        <br/>
        <br/>
        <br/>
        <div>Partage avec tes amis pour commencer la partie:</div>
        <br/>

        <a class="whatsapp" href="https://api.whatsapp.com/send?text={{link}}" data-action="share/whatsapp/share">Whatsapp</a>
        </br>

        @if(isMobile)
          <a class="messenger"  href="fb-messenger://share?link={{link}}">Messenger</a>
        @endif
        
        @if(!isMobile)
          <a class="messenger" href="http://www.facebook.com/dialog/send?app_id=582407492655263&link={{link}}&redirect_uri={{link}}">Messenger</a>
        @endif

        <div id="copyTarget" hidden>{{link}}</div>
        <div id="copyButton" type="submit" class="clipboardButton clipboard"></div>
      @endif

      @if(game && !isKillOwner || (isUpdateKill && !startedAt))
        <form autocomplete="off" class="form" action="{{ route('game') }}" method="POST">
          <label>
            <input name="username" value="{{username}}" placeholder="PiegeAMorue42" type="text" required/>
            <spans>
              <span>Ton blaze</span>
            </span>
          </label>
          </br></br></br>
          <label>
            <input name="description" value="{{ownKill.description || ''}}" placeholder="{{killSuggestion}}" required/>
            <spans>
              <span>Ton kill</span>
            </span>
          </label>  
          {{ csrfField() }}
          <input hidden name="id" value="{{ game.id }}"/>
          <input hidden name="kill_id" value="{{ ownKill && ownKill.id }}"/>
          <label>
            @if(isUpdateKill)
              <input type="submit" value="Modifier"/>
            @else
              <input type="submit" value="Envoyer"/>
            @endif
          </label>  
        </form>
      @endif

      @if(!isGameOwner && !startedAt)
        @if(killers.length < minPlayers)
          <div>En attente d'au moins {{minPlayers - killers.length}} personnes...</div>
        @else
          @if(game)
            <div>En attente de lancement par le créateur de la partie...</div>
          @endif
        @endif
      @endif


      @if(!startedAt && !isUpdateKill && isKillOwner)
        <a class="update-kill" href="?updateKill=1">Modifier mon kill</a>
      @endif



      @if(isGameOwner && !startedAt)
        <form autocomplete="off" class="form" action="{{ route('game.start', {id: game.id}) }}" method="POST">
          {{ csrfField() }}
          <input hidden name="id" value="{{ game.id }}"/>
          <label>
              @if(killers.length < 3)  
                <input type="submit" value="En attente d'au moins {{minPlayers - killers.length}} autre(s) personne(s)" disabled />
              @else
                @if(!isUpdateKill)
                  <input type="submit" value="Prêt" />
                @endif
              @endif
          </label>  
        </form>
      @endif

      <a href="/doc">Voir les règles du jeu</a>

    </div>
  </section>

